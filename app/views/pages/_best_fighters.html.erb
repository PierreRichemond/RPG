<% top = fighters[0] %>
<% second = fighters[1] %>
<% third = fighters[2] %>

<div class="row">
  <div class="col-12 col-lg-6 offset-lg-3">
    <h3 class = "text-center">Rank 1</h3>
    <div class="fighter_card">
      <%= render "fighters/photo", fighter: top %>
      <div class="fighter_card_infos">
        <%= render "./fighters/fighter_details", fighter: top %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-12 col-lg-6">
    <h3 class = "text-center">Rank 2</h3>
    <div class="fighter_card">
      <%= render "fighters/photo", fighter: second %>
      <div class="fighter_card_infos">
        <%= render "./fighters/fighter_details", fighter: second %>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-6">
    <h3 class = "text-center">Rank 3</h3>
    <div class="fighter_card">
      <%= render "fighters/photo", fighter: third %>
      <div class="fighter_card_infos">
        <%= render "./fighters/fighter_details", fighter: third %>
      </div>
    </div>
  </div>
</div>
